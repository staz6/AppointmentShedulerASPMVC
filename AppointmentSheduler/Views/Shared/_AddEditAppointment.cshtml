<div class="modal fade" role="dialog" id="appointmentInput" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="appointmentForm" autocomplete="off" novalidate="novalidate">
                <div class="modal-header">
                    <div class="modal-title">
                        Add/Edit Appointment
                    </div>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="title">Titlte</label>
                        <input type="text" class="form-control" id="title" />
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea type="text" class="form-control" id="description"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="title">Select Patient</label>
                        <select id="patientId" asp-items="@(new SelectList(ViewBag.getPatient,"Id","Name"))" class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <label for="startDate">Start Date</label>
                        <input  class="form-control" id="startDate" />
                    </div>
                    <div class="form-group">
                        <label for="title">Select Time</label>
                        <select id="duration" asp-items="@ViewBag.getTime" class="form-control"></select>
                    </div>
                    <input type="hidden" id="id" />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-secondary" onclick="onCloseModal();">Close</button>
                    <button type="submit" id="btnSubmit" class="btn btn-success" onclick="onSubmitForm();">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>