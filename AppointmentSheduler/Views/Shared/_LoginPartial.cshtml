@inject Microsoft.AspNetCore.Identity.SignInManager<AppointmentSheduler.Models.ApplicationUser> signINManager

@if (signINManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-action="Logoff" asp-controller="Account">
        <ul class="nav navbar-nav">
            <li class="nav-item text-black-50 nav-link">
                Hello, @User.Identity.Name
            </li>
            <li class="nav-item text-black-50">
                <a  class="nav-link " href="javascript:document.getElementById('logoutForm').submit()">Log Off</a>
            </li>
        </ul>
    </form>
}
else
{
<ul class="nav navbar-nav">
    <li class="nav-item">
        <a class="nav-link text-black-50" asp-action="Register" asp-controller="Account" id="registerLink">Sign In</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-black-50" asp-action="Login" asp-controller="Account" id="loginLink">Log In</a>
    </li>
    
</ul>

}
